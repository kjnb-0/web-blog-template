<div>
        <a href="/dashboard/create/"><button id="create-post">write post</button></a>
        
        <h2>Dashboard: your posts</h2>
        
{{#if posts.length}}
    </div>

    {{#each posts as |post|}}
        {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}"><button>edit post</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not currently have any posts</h6>

{{/if}}